<div class="container">
  <div class="row">

  <h1>Purchased Items</h1>
  <table class="u-full-width">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Description</th>
        <th>Condition</th>
        <th>Price</th>
        <th>Seller</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bought_items.each do |item| %>
        <tr>
          <td><%= item.listing.title %></td>
          <td><%= item.listing.author %></td>
          <td><%= item.listing.description %></td>
          <td><%= format_condition(item.listing.condition) %></td>
          <td><%= number_to_currency(item.listing.price) %></td>
          <td><%= item.seller.username %></td>
          <td><%= item.listing.category.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
